{{!-- Form for uploading an image --}}
<form method="POST" action="{{routes.post.image.create}}" enctype="multipart/form-data" id="post-image-form">
  <div class="container-fluid col-lg-5 col-md-6 col-sm-7 col-10 custom-form">
    {{#if user}}
      <input type="hidden" name="username" value="{{user.username}}"/>
      <input type="hidden" name="provider" value="{{user.provider}}"/>
      <input type="hidden" name="familyname" value="{{user.familyName}}"/>
       <input type="hidden" name="gravatar" value="{{user.gravatar}}"/>
      {{#if message}}
        <div class="row alert alert-danger" id="message">{{message}}</div>  
      {{/if}}
    {{/if}}
    <div class="form-group row">
      <label for="post-image" class="col-form-label btn btn-primary" class="file"
      style="background-color:rgb(37,37, 41); color:white; border: none;">
        Pick a photo
      </label>
      <input type="file" class="form-control" id="post-image" name="post-image" style="display: none;"/>
    </div>

    <div class="status" style="margin: 0 0 0 -14px;"></div>
    <div id="preview" class="col-auto img" style="border: none; padding: 0; margin: 0 0 0 -28px;"></div>

    <div class="form-group row">
      <label for="caption" class="col-form-label">Caption:</label>
      <textarea class="form-control" id="caption" rows="2" name="caption"></textarea>
    </div>
    
    <div class="row upload-button">
      <button type="button" class="post-img-btn" id="image-upload"
      style="color:white ;background-color: rgba(215, 215, 215, 0.7); border: none;
      border-radius: 4px; padding: 7px 20px 7px 20px;">
        <i data-feather="upload-cloud" stroke="white" width="20px" height="20px"></i>
        <span class="posting" style="font-size: 1.2em;">Post</span>
      </button>
    </div>
  </div>
</form>

{{> footer_js }}
