<form method="POST" action="/posts/delete/confirm">
  <div class="container-fluid h-100">
    <div class="row h-100 justify-content-center">
      {{#if user}}
        <div class="col-12 col-sm-10 col-md-8 col-lg-7"
          style="margin: 15px; padding:15px; background-color: rgb(197, 26, 26); color: white;"
        >
          <input type="hidden" name="postkey" value="{{#if post}}{{postkey}}{{/if}}" />
          <p><span style="color:black;">Confirm Deletion: </span> {{post.title}}?</p>
          <div class="btn-group">
            <button type="submit" class="btn btn-outline-light">Confirm</button>
            <a class="btn btn-outline-light" role="button" href="{{routes.post.view}}?key={{#if post}}{{postkey}}{{/if}}">Cancel</a>
          </div>
        </div>
      {{else}}
        {{> not_logged_in }}
      {{/if}}
    </div>
  </div>
</form>
