<form method="POST" action="/posts/delete/confirm">
  <div class="container-fluid">
    <input type="hidden" name="postkey" value="{{#if post}}{{postkey}}{{/if}}" />
    <p><span style="color:red;">Confirm Deletion:</span> {{post.title}}?</p>
    <div class="btn-group">
      <button type="submit" class="btn btn-outline-dark">Confirm</button>
      <a class="btn btn-outline-dark" role="button" href="/posts/view?key={{#if post}}{{postkey}}{{/if}}">Cancel</a>
    </div>
  </div>
</form>
